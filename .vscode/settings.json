{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
	"files.exclude": {
		"out": false,
		"dist": false,
		".vscode-test": true
	},
	"search.exclude": {
		"out": true,
		"dist": true,
		".vscode-test": true
	}
}
